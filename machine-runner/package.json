{
  "name": "@actyx/machine-runner",
  "version": "0.3.1",
  "type": "module",
  "description": "asymmetric replicated state machines: runtime support",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Actyx/machines"
  },
  "files": [
    "./lib/**/*"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --build tsconfig.build.json",
    "build:cjs": "tsc --build cjs/tsconfig.json && npm run build:cjs:package-json",
    "build:cjs:package-json": "ts-node-esm ./scripts/build-cjs-package-json.ts",
    "clean": "npm run clean:esm && npm run clean:cjs",
    "clean:esm": "rimraf ./lib",
    "clean:cjs": "rimraf ./cjs/lib",
    "test": "npm run test:cjs:prepare && npm run test:run",
    "test:run": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cjs:prepare": "ts-node-esm ./scripts/copy-test-for-cjs.ts",
    "lint": "npx eslint src/**/*.ts",
    "lint:strict": "npm run lint -- --max-warnings 0",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint"
  },
  "keywords": [
    "local-first"
  ],
  "author": "Actyx AG",
  "license": "Apache-2.0",
  "devDependencies": {
    "@jest/globals": "^29.4.2",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.2.6",
    "jest": "^29.4.2",
    "prettier": "^2.8.0",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5"
  },
  "dependencies": {
    "@actyx/sdk": "^0.5.7",
    "@types/events": "^3.0.0",
    "events": "^3.3.0",
    "ts-node": "^10.9.1",
    "typed-emitter": "^2.1.0",
    "typescript": "^4.9.5"
  }
}
