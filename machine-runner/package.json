{
  "name": "@actyx/machine-runner",
  "version": "0.4.4",
  "description": "asymmetric replicated state machines: runtime support",
  "type": "module",
  "types": "./lib/esm/index.d.ts",
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./test-utils": {
      "import": "./lib/esm/test-utils/index.js",
      "require": "./lib/cjs/test-utils/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Actyx/machines.git"
  },
  "files": [
    "./lib/**/*",
    "./example-workflow.png"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:copy-package-json",
    "build:esm": "tsc --build tsconfig.esm.json",
    "build:cjs": "tsc --build tsconfig.cjs.json",
    "build:copy-package-json": "ts-node-esm scripts/build/copy-package-json.ts",
    "clean": "npm run clean:lib && npm run test:cjs:clean",
    "clean:lib": "rimraf ./lib",
    "test": "npm run test:esm && npm run test:cjs",
    "test:esm": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config=tests/esm/jest.config.ts",
    "test:cjs": "npm run test:cjs:clean && npm run test:cjs:copy && jest --config=tests/cjs/jest.config.ts",
    "test:cjs:copy": "ts-node-esm scripts/test/cjs-copy.ts",
    "test:cjs:clean": "ts-node-esm scripts/test/cjs-remove.ts",
    "lint": "npx eslint src/**/*.ts",
    "lint:strict": "npm run lint -- --max-warnings 0",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint"
  },
  "keywords": [
    "local-first"
  ],
  "author": "Actyx AG",
  "license": "Apache-2.0",
  "devDependencies": {
    "@jest/globals": "^29.4.2",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.2.6",
    "jest": "^29.4.2",
    "prettier": "^2.8.0",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5"
  },
  "dependencies": {
    "@actyx/sdk": "^0.5.7",
    "@types/events": "^3.0.0",
    "events": "^3.3.0",
    "fast-equals": "^5.0.1",
    "ts-node": "^10.9.1",
    "typed-emitter": "^2.1.0",
    "typescript": "^4.9.5"
  }
}
